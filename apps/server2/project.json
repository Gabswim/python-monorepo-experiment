{
  "name": "postmodern-server2",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/server2/postmodern/server2",
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run uvicorn postmodern.server2.run:app --reload --port 8001",
        "cwd": "apps/server2"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run pytest .",
        "cwd": "apps/server2"
      }
    },
    "check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run ty check .",
        "cwd": "apps/server2"
      }
    },
    "fmt": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run ruff format .",
        "cwd": "apps/server2"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run ruff check --fix .",
        "cwd": "apps/server2"
      }
    },
    "ci:fmt": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run ruff format --check .",
        "cwd": "apps/server2"
      }
    },
    "ci:lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run ruff check .",
        "cwd": "apps/server2"
      }
    }
  }
}
